<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <!--Navigation bar-->
    <nav class="navbar navbar-expand-lg bg-dark fixed-top" id="mainNav">
        <div class="container">
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul id="elegantStyle" class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1">@Html.ActionLink("Home", "Index", "Home")</li>

                    <li class="nav-item mx-0 mx-lg-1"> @Html.ActionLink("Orders", "Orders", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>
    <!--Body-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Task Orders Managment App MVC .NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
   
    @RenderSection("scripts", required: false)
</body>
</html>
